(() => {
  document.getElementById("articles-sorting-container").innerHTML =
    "<%= j(render partial: 'sort_tabs') %>";

  document.getElementById("articles-container").innerHTML =
    "<%= j(render partial: 'article_card', collection: @articles, as: 'article') %>";

  document.getElementById("articles-paginate-container").innerHTML =
    "<%= j(paginate @articles, remote: true) %>";

  scrollTo(0, 0);

  const elms = document.getElementsByClassName("loading-trigger");
  for (let i = 0, len = elms.length; i < len; i++)
    elms[i].addEventListener("click", window.__customMethods.setLoadingSpinner);
})();
